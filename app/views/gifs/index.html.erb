<p class="text-muted d text-center">
 <%= link_to "Add a new gif to the magical mystery archive", new_gif_path %>
</p>

<% @gifs.each_slice(3) do |gifs| %>
  <div class="row">
    <% gifs.each do |gif| %>
      <div class="col-xs-4">
        <div class="crop">
          <%= link_to image_tag(gif.url, class: "img-responsive"), gif %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<br />
<%= will_paginate @gifs, renderer: BootstrapPagination::Rails %>

  <div class="row">
  <div id="tag_cloud">
    <span><b>Tags Cloud: </b></span>
    <% tag_cloud Gif.tag_counts, %w{s m l} do |tag, css_class| %>
      <%= link_to tag.name, tagged_gifs_path(tag.name), class: css_class %>
    <% end %>
  </div>

</div>
